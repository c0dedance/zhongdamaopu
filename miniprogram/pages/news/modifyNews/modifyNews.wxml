<!--pages/news/modifyNews/modifyNews.wxml-->

<form bindsubmit="bindSubmit">
    <block wx:if="{{!isAuth}}" class='unAuth'>
        <view class='userInfo'>
            <image src='../../../images/system/user.png'></image>
            <view>等待授权</view>
        </view>
        <button bindtap='getUInfo'>点击授权</button>
    </block>
    <block wx:else>
        <block wx:if="{{isAuth}}">
            <view class='userInfo'>{{user.userInfo.nickName}} 正在修改公告</view>

            <view class='label'>标题：</view>
            <input name='title' type='text' bindinput='bindInputTitle' maxlength='{{titlemaxlength}}' value='{{news.title}}'></input>
            <view class='lengthTips'>字数：{{titlelength}}/{{titlemaxlength}}</view>

            <view class='label'>正文：</view>
            <textarea name='mainContent' maxlength='{{maxlength}}' bindinput='bindInput' value='{{news.mainContent}}'></textarea>
            <view class='lengthTips'>字数：{{length}}/{{maxlength}}</view>

            <view class='submitButton'>
                <button form-type='submit' bindtap="toSubmit">提交修改</button>
            </view>
        </block>
    </block>
</form>