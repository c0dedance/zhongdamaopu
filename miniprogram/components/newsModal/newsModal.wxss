/* components/newsModal/newsModal.wxss */
.wx-mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}

.wx-modal-catlogo {
    position: absolute;
    top: -100rpx;
    right: 10rpx;
    height: 110rpx;

}

.wx-modal {
    position: fixed;
    z-index: 5000;
    width: 600rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    border-radius: 15rpx;
    overflow: visible;
}

.wx-modal-title {
    font-size: 18px;
    padding: 15px 15px 5px;
    text-align: center;
}

.wx-modal-content {
    padding: 15px 15px 5px;
    min-height: 40px;
    font-size: 16px;
    line-height: 1.3;
    white-space: pre-wrap;
    color: var(--color-gray-dark);
}

.wx-modal-image {
    margin: 30rpx;
}

.wx-modal-image image {
    width: 540rpx;
}

.wx-modal-scroll {
    height: 600rpx;
}

.wx-modal-class {
    width: 100rpx;
    font-size: 24rpx;
    text-align: center;
    background-color: var(--color-primary);
    color: var(--color-gray-light);
    border-radius: 15rpx;
    margin: 20rpx;
    margin-left: 40rpx;
}


.wx-modal-time {
    float: right;
    font-size: 24rpx;
    color: var(--color-primary);
    margin: 20rpx;
    text-align: center;
    margin-right: 40rpx;
}

.wx-modal-footer {
    display: flex;
    align-items: center;
    position: relative;
    line-height: 45px;
    font-size: 17px;
}

.wx-modal-footer::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.wx-modal-btn {
    display: block;
    flex: 1;
    position: relative;
    text-align: center;
}

.wx-modal-footer .wx-modal-btn:nth-of-type(1) {
    color: var(--color-gray-max);
}

.wx-modal-footer .wx-modal-btn:nth-of-type(2) {
    color: var(--color-primary-dark);
}

.wx-modal-footer .wx-modal-btn:nth-of-type(2):after {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    bottom: 0;
    border-left: 1px solid #D5D5D6;
    color: #D5D5D6;
    transform-origin: 0 0;
    transform: scaleX(0.5);
}